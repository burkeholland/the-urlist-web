---
import "../styles/global.css";
import { DarkModeToggle } from "../components/DarkModeToggle";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "The Urlist - Create and Share Lists of Links",
  description = "Create and share collections of links with a beautiful, easy-to-share URL. Perfect for sharing resources, reading lists, or any collection of links.",
} = Astro.props;

const canonicalURL = new URL(
  Astro.url.pathname,
  Astro.site ?? "https://theurlist.com",
);
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="flex min-h-screen flex-col bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 relative overflow-x-hidden antialiased"
  >
    <!-- Subtle gradient accents -->
    <div
      class="fixed inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(21,191,174,0.05),transparent_70%)] dark:bg-[radial-gradient(circle_at_30%_20%,rgba(21,191,174,0.10),transparent_70%)]"
    >
    </div>
    <div
      class="fixed inset-0 bg-[radial-gradient(circle_at_70%_60%,rgba(3,165,119,0.05),transparent_70%)] dark:bg-[radial-gradient(circle_at_70%_60%,rgba(3,165,119,0.10),transparent_70%)]"
    >
    </div>

    <nav
      class="sticky top-0 z-20 backdrop-blur-lg border-b border-[#15BFAE]/10"
    >
      <div
        class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 flex items-center"
      >
        <a
          href="/"
          class="text-xl font-bold text-[#03A678] hover:text-[#15BFAE] transition-all duration-300 flex items-center gap-2"
        >
          <img src="/favicon.svg" alt="" class="w-6 h-6" />
          The Urlist
        </a>
        <div class="flex-1"></div>
        <div class="flex items-center gap-6">
          <ul class="flex gap-6">
            <li>
              <a
                href="/"
                class="text-gray-700 dark:text-gray-200 hover:text-[#15BFAE] dark:hover:text-[#15BFAE] font-medium transition-colors duration-200"
                >My Lists</a
              >
            </li>
            <li>
              <a
                href="/about"
                class="text-gray-700 dark:text-gray-200 hover:text-[#15BFAE] dark:hover:text-[#15BFAE] font-medium transition-colors duration-200"
                >About</a
              >
            </li>
            <li>
              <a
                href="/terms"
                class="text-gray-700 dark:text-gray-200 hover:text-[#15BFAE] dark:hover:text-[#15BFAE] font-medium transition-colors duration-200"
                >Terms</a
              >
            </li>
          </ul>
          <DarkModeToggle client:load />
        </div>
      </div>
    </nav>

    <main class="flex-grow relative z-10">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <slot />
      </div>
    </main>

    <footer
      class="relative z-10 py-8 backdrop-blur-lg border-t border-[#15BFAE]/10 mt-auto"
    >
      <div
        class="container mx-auto px-4 sm:px-6 lg:px-8 text-center text-gray-600 dark:text-gray-400"
      >
        <p>
          &copy; {new Date().getFullYear()} The Urlist. Share your links with the
          world.
        </p>
      </div>
    </footer>
  </body>
</html>
