{
  "inputs": [
    {
      "type": "promptString",
      "id": "perplexity_api_key",
      "description": "Perplexity API Key",
      "password": true
    }
  ],
  "servers": {
    "perplexity-ask": {
      "command": "npx",
      "args": [
        "-y",
        "server-perplexity-ask"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "${input:perplexity_api_key}"
      }
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    }
  }
}